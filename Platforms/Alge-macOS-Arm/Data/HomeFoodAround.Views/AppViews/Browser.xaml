<Window x:Class="AppViews.Browser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppViews"
        mc:Ignorable="d"
        Title="Browser" Height="450" Width="800" Background="#FF2B2D2F" Foreground="White">
    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal">
            <Label Background="#FF2B2D2F" Foreground="White" x:Name="UrlINput" Width="400"/>
            <Button x:Name="ButtonGo" Background="#FF2B2D2F" Content="Go" Width="50" Foreground="White"></Button>
        </StackPanel>
        <Label x:Name="HtmlView" Background="#FF2B2D2F" Content="HtmlView" Foreground="White"></Label>
        <Label x:Name="StatusBar" Background="#FF00FD2F" Content="Status" Foreground="White"></Label>
    </StackPanel>
</Window>
