<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VehIsb.MainPage"
             Title="ISLAMABAD VEHICLE CHECK">

    <ScrollView>
        <VerticalStackLayout
            Spacing="10"
            Padding="30,0"
            VerticalOptions="Start">
            <Entry
                x:Name="txtPlate"
                Text="Enter Vehicle Plate Number"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="e.g AC201, jb123, JB 123 etc"
                FontSize="32"
                Focused="Entry_Focused"
                HorizontalOptions="Center" />

            <Button
                x:Name="btnFind"
                Text="Find"
                FontSize="32"
                SemanticProperties.Hint="Search online db"
                Clicked="OnFindButtonClicked"
                HorizontalOptions="Center" />
            <BoxView Color="CornflowerBlue"
                 WidthRequest="160"
                 HeightRequest="160"/>
            <Label
                x:Name="txtResult"
                Text="-1-"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="Results are displayed here"
                FontSize="42"
                HorizontalOptions="Center" />
            <Image
                Source="cloud.jpg"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="50"
                HorizontalOptions="Center" />
            <Image
                Source="map_snap.jpg"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="250"
                HorizontalOptions="Center" />
            
            <Label
                Text="Data obtained from Peer Network"
                FontSize="44"
                HorizontalOptions="Center" />
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
