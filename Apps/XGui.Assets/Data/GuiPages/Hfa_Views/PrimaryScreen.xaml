<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HomeFoodAround.PrimaryScreen"
             Title="Home Food Around">
    <VerticalStackLayout Spacing="50">
        <Label 
            Text="Welcome to HomeFoodAround Network"
            FontSize="Title"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
            <Image WidthRequest="60" HeightRequest="60" Source="https://cdn-icons-png.flaticon.com/512/5141/5141534.png"/>
            <Button x:Name="btnOrder" Text="Order Some Food" />
        </HorizontalStackLayout>
        <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
            <Image WidthRequest="60" HeightRequest="60" Source ="https://cdn-icons-png.flaticon.com/512/2927/2927347.png"/>
            <Button x:Name="btnManage" Clicked="btnManage_Clicked" Text="Manage your Kitchen" />
        </HorizontalStackLayout>

        
    </VerticalStackLayout>
</ContentPage>
